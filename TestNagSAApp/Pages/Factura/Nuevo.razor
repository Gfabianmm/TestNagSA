@page "/Factura/nuevo"

<PageTitle>Factura</PageTitle>

@using TestNagSAApp.Data
@using TestNagSAApp.Domain.Factura;
@using TestNagSAApp.Domain.Producto;
@inject FacturaService facturaService
@inject NavigationManager navigationManager

<h1>Factura Nueva</h1>
<br />
<div class="float-end">
    <a href="/Factura/fetch" class="btn btn-secondary">Regresar </a>
</div>
<p>Agregar nueva factura</p>



<EditForm Model="@_producto" OnValidSubmit="@OnValidSubmit">
    @if (_producto is not null)
    {

        <div class="card">
            <div class="card-body">

                <div class="col-12 ">
                    <div class="col-6 mb-3">
                        <label class="form-label">Nombre Cliente:</label>

                        <InputText class="form-control" id="Descripcion" autocomplete="off" @bind-Value=@_producto.Cliente />
                        <div class="invalid-feedback">
                            <ValidationMessage class="text-danger" For="@(() => _producto.Cliente)" />
                        </div>
                    </div>

                    <div class="col-lg-6 col-12 mb-3">
                        <label class="form-label">Fecha:</label>

                        <InputDate class="form-control" id="Descripcion" autocomplete="off" @bind-Value=@_producto.Fecha />
                        <div class="invalid-feedback">
                            <ValidationMessage class="text-danger" For="@(() => _producto.Fecha)" />
                        </div>
                    </div>

                    <div class="col-12">
                        <h5>Detalle</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Cantidad</th>
                                    <th>Valor</th>
                                    <th>Descuento</th>
                                    <th>IVA</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detalle in _producto.FacturaDetalle)
                                {
                                    <tr>
                                        <td>
                                            <InputText class="form-control" @bind-Value="detalle.IdProducto" />
                                        </td>
                                        <td>
                                            <InputNumber class="form-control" @bind-Value="detalle.Cantidad" />
                                        </td>

                                        <td>
                                            <span class="form-control">@detalle.Valor</span>
                                        </td>

                                        <td>
                                            <InputNumber class="form-control" @bind-Value="detalle.Descuento" />
                                        </td>
                                        <td>
                                            <InputNumber class="form-control" @bind-Value="detalle.IVA" />
                                        </td>
                                        <td>
                                            <span class="form-control">@detalle.Total</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- Botón para agregar nuevo detalle -->
                    <button class="btn btn-secondary" type="button" @onclick="AgregarNuevoDetalle">Agregar Detalle + </button>

                    <div class="col-12 mt-3">
                        <h5>Forma pago</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Forma Pago</th>
                                    <th>Valor</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detalle in _producto.FacturaFormaPago)
                                {
                                    <tr>
                                        <td>
                                            @* <InputText class="form-control" /> *@
                                        </td>
                                        <td>
                                            <InputNumber class="form-control" @bind-Value="detalle.Valor" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- Botón para agregar forma pago -->
                    <button class="btn btn-secondary" type="button" @onclick="AgregarNuevoFormaPago">Agregar Forma Pago + </button>

                    <div class="row mt-3">
                        <div class="col">
                            <div class="col-lg-6 col-12 mb-3">
                                <label class="form-label">Descuento:</label>
                                <span class="form-control">@_producto.Descuento </span>
                                <div class="invalid-feedback">
                                    <ValidationMessage class="text-danger" For="@(() => _producto.Descuento)" />
                                </div>
                            </div>
                        </div>

                        <div class="col">
                            <div class="col-lg-6 mb-3">
                                <label class="form-label">Valor IVA:</label>
                                <span class="form-control">@_producto.IVA</span>
                                <div class="invalid-feedback">
                                    <ValidationMessage class="text-danger" For="@(() => _producto.IVA)" />
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="col-lg-6 mb-3">
                                <label class="form-label">Valor Venta:</label>
                                <span class="form-control">@_producto.ValorTotal</span>
                                <div class="invalid-feedback">
                                    <ValidationMessage class="text-danger" For="@(() => _producto.ValorTotal)" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <DataAnnotationsValidator />
                </div>

            </div>
            <div class="card-footer d-flex justify-content-start py-6 px-9">

                <button disabled="@_isBusy" type="submit" class="btn btn-primary">
                    @if (!_isBusy)
                    {
                        <text>Guardar</text> <i class="bi bi-cloud-plus"></i>
                    }
                    else
                    {
                        <text>Procesando...</text>
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    }
                </button>
            </div>
        </div>




    }


</EditForm>


@code {


    public bool _isBusy { get; set; }
    private FacturaDTO _producto = new FacturaDTO() { Estado = "A" };

    protected override async Task OnInitializedAsync()
    {
        //_formasPago = await formaPagoService.GetAsync();
    }
    public async void OnValidSubmit()
    {
        _isBusy = true;
        StateHasChanged();
        try
        {
            var response = await facturaService.PostAsync(_producto);
            if (response.Item1)
            {
                navigationManager.NavigateTo("/Producto/fetch");
            }
            else
            {

            }
        }
        catch (Exception)
        {
            //aqui debe mostrar alguna alerta
        }
        finally
        {
            _isBusy = false;
            StateHasChanged();
        }
    }

    public async void AgregarNuevoDetalle()
    {
        _isBusy = true;
        StateHasChanged();
        try
        {
            _producto.FacturaDetalle.Add(new FacturaDetalleDTO());
        }
        catch (Exception)
        {
            //aqui debe mostrar alguna alerta
        }
        finally
        {
            _isBusy = false;
            StateHasChanged();
        }
    }

    public async void AgregarNuevoFormaPago()
    {
        _isBusy = true;
        StateHasChanged();
        try
        {
            _producto.FacturaFormaPago.Add(new FacturaFormaPagoDTO() { Valor=0, Estado="A" });
        }
        catch (Exception)
        {
            //aqui debe mostrar alguna alerta
        }
        finally
        {
            _isBusy = false;
            StateHasChanged();
        }
    }





}
